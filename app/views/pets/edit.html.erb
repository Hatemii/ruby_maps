<h4 class="text-center">Edit <%= @pet.name.capitalize %></h4>
<hr />
<br />

<%= form_with model: @pet, local: true,
  data: {
    controller: "maps", action: "google-maps-callback@window->maps#initMap"
  } do |form| %>
    
  <% if @pet && @pet.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@pet.errors.count, "error" ) %> prohibited this pet from being saved:
      </h2>

      <ul>
        <% @pet.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <div class="container">
        <form>
          <div class="form-row">
            <div class="form-group col-md-3">
              <%= form.label :name %>
                <%= form.text_field :name, class: "form-control" , placeholder:"Name" %>
            </div>
      
            <div class="form-group col-md-3">
              <%= form.label :species %>
                <%= form.select :species, ["Cat", "Dog" , "Bird" , "Hamster" , "Reptiles" , "Others" ], {},
                  class: "form-control" %>
            </div>
      
            <div class="form-group col-md-3">
              <%= form.label :breed %>
                <%= form.text_field :breed, class: "form-control" , placeholder:"Breed" %>
            </div>
      
            <div class="form-group col-md-3">
              <%= form.label :injured %> <br />
                <%= form.check_box :injured %>
            </div>
          </div>
      
          <br />
      
          <div class="form-row">

            <div class="form-group col-md-3">
              <%= form.label :search %>
              <%= form.search_field :search, class: 'form-control' , placeholder: "Search City" , 'data-target'=> "maps.field" %>
            </div>
            
            <div class="form-group col-md-3">
              <%= form.label :latitude %>
              <%= form.text_field :latitude, class: "form-control" , 'data-target' => "maps.latitude" %>
            </div>
      
            <div class="form-group col-md-3">
              <%= form.label :longitude %>
              <%= form.text_field :longitude, class: "form-control" , 'data-target' => "maps.longitude" %>
            </div>

            <div class="form-group col-md-3">
              <%= form.label :lost_on, "Lost On" %>
              <span style="font-style:italic; font-size:12px">(date older then 3 years is not valid!)</span>
              <%= form.text_field :lost_on, type: "date" , class:"form-control" %>
            </div>
          </div>
      
          <br />
          <div class="form-row">
            <div class="form-group col-md-12">
              <%= form.label :image %>
                <br />
              <%= form.file_field :image %>
                <br />
              <%= link_to 'Remove Image' , pet_pet_image_remove_path(@pet), method: :delete,
              onclick: "return confirm('Are you sure?')" %>
            </div>
          </div>
        
        <br />
      
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= form.label :description, "Description" %>
                <%= form.text_area :description, placeholder: "max 100 character" , class:"form-control", maxlength: 100,
                  rows: "3" %>
            </div>
            <div class="form-group col-md-6">
              <%= form.label :other_info, "Other Info" %>
                <%= form.text_area :other_info, placeholder: "max 30 character" , class:"form-control", maxlength: 30,
                  rows: "3" %>
            </div>
          </div>
      
          <br />
      
          <div class="form-row text-center">
            <div class="form-group col-md-12">
              <%= form.submit "Save" , class: "btn btn-default btn-success" ,
                style: 'color:black; font-weight: bold; width: 15rem' %>
            </div>
          </div>


          <br />
          
          <div>
            <div data-maps-target="map" , class='map' , style="position: relative; overflow: hidden"></div>
          </div>
          
          <br />
          <br />
      
        </form>
      </div>
      <hr />
    <% end %>
