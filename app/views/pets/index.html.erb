
<div class="btn-group">
  <div class="col split-button-1 text-right">
    <button>Lost Pets</button>
  </div>
  
  <span style="border-left: 3px solid rgb(75, 75, 75);"></span>
  
  <div class="col split-button-2 text-left">
    <button>Found Pets</button>
  </div>
</div>


<hr>
<h5>Total Pets - <%= @pets.count%></h5>
<br />

<div class="container-fluid content-row">
<div class="row" style="margin-bottom: 100px;">
  
  <% @pets.each do |pet| %>
    <div class="col-md-4 align-items-stretch" style="margin-bottom: 5%;">
      <div class="card h-100">
        
        <% if !pet.image.blank? %>
          <%=image_tag(pet.image, class: "card-img-top") %> 
        <% else %>
          <img class="card-img-top" src="" alt="no image available!">
        <% end %>
       
        <div class="card-body text-center d-flex flex-column">
          <h5 class="card-title"> <strong><%= pet.name.upcase %></strong></h5>
          <table class="table">
              <tbody>
                <tr>
                  <td>Species</td>
                  <td><%= pet.species.capitalize %></td>
                </tr>
                <tr>
                  <td>Breed</td>
                  <td><%= pet.breed.capitalize %></td>
                </tr>
                <tr>
                  <td>Lost on</td>
                  <td><%= pet.lost_on_format %></td>
                </tr>
              </tbody>
          </table>
          
          <%= link_to 'Read More', pet, class: "mt-auto btn btn-primary", style: "color: white; font-weight: bold" %>
        </div>
        <div class="card-footer text-muted text-center">
          posted - <%= pet.created_at.strftime('%a, %d %b %Y') %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>