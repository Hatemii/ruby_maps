<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Species</th>
      <th>Breed</th>
      <th>Lost on</th>
      <th>Last known latitude</th>
      <th>Last known longitude</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.description %></td>
        <td><%= pet.species %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.lost_on %></td>
        <td><%= pet.last_known_latitude %></td>
        <td><%= pet.last_known_longitude %></td>
        <td>
          <%= link_to 'Show', pet %>
          | <%= link_to 'Edit', edit_pet_path(pet) %>
          | <%= link_to 'Delete', pet, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path, class: "btn btn-primary" %>
