<h1>New Record</h1>

<%= form_with(model: @pet) do |form| %>
  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@pet.errors.count, "error" ) %> prohibited this pet from being saved:
      </h2>

      <ul>
        <% @pet.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

    <div class="container">
    <form>
      <div class="form-row">
        <div class="form-group col-md-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", placeholder:"Name" %>
        </div>

        <div class="form-group col-md-3">
          <%= form.label :species %>
          <%= form.select :species, ["Cat", "Dog" , "Bird" , "Hamster" , "Reptiles" , "Others" ], {}, class: "form-control" %>
        </div>

        <div class="form-group col-md-3">
          <%= form.label :breed %>
          <%= form.text_field :breed, class: "form-control", placeholder:"Breed" %>
        </div>

        <div class="form-group col-md-3">
          <%= form.label :injured %> <br />
          <%= form.check_box :injured %>
        </div>
        </div>

        <br />

        <div class="form-row">
          <div class="form-group col-md-3">
            <%= form.label :lost_on, "Lost On" %>
            <span style="font-style:italic; font-size:12px">(date older then 3 years is not valid!)</span>
            <%= form.text_field :lost_on, type: "date", class:"form-control" %>
          </div>

          <div class="form-group col-md-3">
            <%= form.label :last_known_latitude, "Last Known Latitude" %>
            <%= form.text_field :last_known_latitude, class: "form-control", placeholder: "Latitude" %>
          </div>
          
          <div class="form-group col-md-3">
            <%= form.label :last_known_longitude, "Last Known Longitude" %>
            <%= form.text_field :last_known_longitude, class: "form-control", placeholder: "Longitude" %>
          </div>
        
          <div class="form-group col-md-3">
            <%= form.label :image %>
            <%= form.file_field :image, class: "form-control-file" %>
          </div>
        </div>

        <br />

        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :description, "Description" %>
            <%= form.text_area :description, placeholder: "max 100 character" , class:"form-control", maxlength: 100, rows: "3" %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :other_info, "Other Info" %>
            <%= form.text_area :other_info, placeholder: "max 30 character" , class:"form-control", maxlength: 30, rows: "3" %>
          </div>
        </div>

        <br />

        <div class="form-row text-center">
          <div class="form-group col-md-12">
            <%= form.submit "Save" , class: "btn btn-default btn-success" , style: 'color:black; font-weight: bold; width: 15rem' %>
          </div>
        </div>

    </form>
    </div>
    <hr />

<% end %>

